{
    "configurations": [
       
        
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8501",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to Chrome",
            "port": 8501,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        }, 
        {
            "name": "Python:Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "cwd": "${fileDirname}",
            "args": [
                 "run",
                 "${file}",
                 "--server.port",
                 "8501"
            ]
        },     
    ]
}